<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bookLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        android:id="@+id/textInputLayout1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="36dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Direccion"
            android:singleLine="true"
            android:id="@+id/txtlocationbook" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        android:id="@+id/textInputLayout2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del libro"
            android:singleLine="true"
            android:id="@+id/txtbookname" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:text="Preferencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textInputLayout3">
            <CheckBox
                android:text="Venta"
                android:layout_width="111.3dp"
                android:theme="@style/CheckBoxIndigo"
                android:layout_height="wrap_content"
                android:id="@+id/chkventas"
                android:textColor="@android:color/darker_gray" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textInputLayout4">
            <CheckBox
                android:text="Intercambio"
                android:theme="@style/CheckBoxIndigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chkintercambio"
                android:textColor="@android:color/darker_gray" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        android:id="@+id/textInputLayout5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:inputType="textMultiLine"
            android:hint="Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtdescripcionbook" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
        <Button
            android:text="Guardar"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnsavebook"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp" />
        <Button
            android:text="Cancelar"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncancelarbook"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>